<Window x:Class="NicoLiveAlertTwitterWPF.niconico.NicoLoginMailPassDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NicoLiveAlertTwitterWPF.niconico"
        mc:Ignorable="d"
        Icon="/Icon/Icon.ico"
        Title="ニコニコへログイン" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="niconicoへログイン" FontSize="20"/>
            <StackPanel Margin="5">
                <TextBlock Text="メールアドレス"/>
                <TextBox x:Name="NicoLoginMailBox"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="パスワード"/>
                <PasswordBox x:Name="NicoLoginPassBox"/>
            </StackPanel>
            <StackPanel Margin="5">
                <Button Foreground="#ffffff" x:Name="NicoLoginButton" Click="NicoLoginButton_Click" Content="ログイン" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
